<%= form_tag commit_password_change_path, method: 'post' do %>

  <%= label_tag 'Old Password' %>
  <%= password_field_tag 'old_password' %>

  <%= label_tag 'Confirm Old Password' %>
  <%= password_field_tag 'old_password_confirmation' %>

  <%= label_tag 'New Password' %>
  <%= password_field_tag 'password' %>

  <%= label_tag 'Confirm New Password' %>
  <%= password_field_tag 'password_confirmation' %>

  <%= submit_tag 'Change Password', class: 'btn btn-large btn-primary' %>

<% end %>
