<%= form_for @tournament, url: wizard_path do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <%= yield f %>

  <%= f.submit "Continue", class: "btn btn-large btn-primary" %> or
  <% if request.path == previous_wizard_path %>
    <%= link_to "Go back a step", edit_tournament_path(@tournament) %>
  <% else %>
    <%= link_to "Go back a step", previous_wizard_path %>
  <% end %>
<% end %>
